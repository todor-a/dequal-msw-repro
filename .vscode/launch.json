    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current File",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--no-cache",
                "--watchAll=false",
                "${relativeFile}"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
